<?xml version="1.0" encoding="utf-8"?>
<com.applications.whazzup.yandextranslator.ui.screens.translate.TranslateView
    xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="8dp">
        <EditText
            android:id="@+id/original_text_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edittext_background"
            android:hint="Введите текст или адрес сайта"
            android:padding="8dp"
            android:gravity="top"/>
        <ImageView
            android:id="@+id/clear_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_clear_black_24dp"
            android:layout_gravity="bottom"
            android:layout_margin="4dp"/>
    </FrameLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="8dp">
        <TextView
            android:id="@+id/translate_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="8dp"
            android:textColor="@android:color/black"
            android:textSize="18sp"/>
    <CheckBox
        android:id="@+id/translate_screen_favorite_chb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center_vertical"
        android:button="@drawable/favorite_selector_btn"/>
</LinearLayout>
    </LinearLayout>


</com.applications.whazzup.yandextranslator.ui.screens.translate.TranslateView>